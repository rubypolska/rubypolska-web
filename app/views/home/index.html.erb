<%= provide :title, 'Home' %>
<%= provide :description, '' %>
<%= provide :keywords, '' %>

<section id="hero">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class='title'>Ruby <br /><span class='polska'>Polska</span></h1>
        <p class='subtitle'><%= t('hero.subtitle.one') %>
        <span class='bold'><%= t('hero.subtitle.two')%></span><br />
        <%= t('hero.subtitle.three') %>
        <span class='bold'><%= t('hero.subtitle.four') %></span>
        <%= t('hero.subtitle.five') %>.</p>
        <ul class='list-unstyled list-inline actions'>
          <li>
            <%= link_to 'https://discord.gg/myk3SHsz5g',
            target: :_blank,
            class: 'btn btn-primary btn-lg' do %>
              <i class="fa-brands fa-discord"></i>
              Discord
            <% end %>
          </li>
          <li>
            <%= link_to 'https://instagram.com/rubypolska',
            target: :_blank,
              class: 'btn btn-primary btn-lg' do %>
              <i class="fa-brands fa-instagram"></i>
              Instagram
            <% end %>
          </li>
          <li>
            <%= link_to 'https://github.com/rubypolska',
             target: :_blank,
             class: 'btn btn-primary btn-lg' do %>
              <i class="fa-brands fa-github"></i>
              Github
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
