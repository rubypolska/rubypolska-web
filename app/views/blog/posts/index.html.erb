<%= provide :title, 'Blog' %>
<%= provide :description, '' %>
<%= provide :keywords, '' %>

<section id="hero">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h1 class="bold">Ruby Polska Blog</h1>
        <p>
          <%= t('blog.hero.subtitle.line_one') %><br>
          <%= t('blog.hero.subtitle.line_two') %><br/>
          <%= t('blog.hero.subtitle.line_three') %></p>
        <br />

        <%= link_to '#',
        class: 'btn btn-default btn-lg' do %>
          <%= t('blog.hero.newsletter.signup') %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-8">
            <div class="panel panel-default post">
              <div class="panel-body">
                <h5 class='category'>Docker</h5>
                <h3 class='title bold'>Comandos Docker mais utilizados</h3>

                <ul class="info list-unstyled list-inline">
                  <li>há 4 dias</li>
                  <li>3 min de leitura</li>
                </ul>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="panel panel-default post">
              <div class="panel-body">
                <h5 class='category'>Docker</h5>
                <h3 class='title bold'>Comandos Docker mais utilizados</h3>

                <ul class="info list-unstyled list-inline">
                  <li>há 4 dias</li>
                  <li>3 min de leitura</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <%= render @posts %>

          <div class="col-md-12">
            <div class='text-center'>
              <%= paginate(@posts) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>